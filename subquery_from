select P.TEAM_ID, T.TEAM_NAME, P.PLAYER_NAME, P.POSITION
	from PLAYER P, TEAM T
	where P.TEAM_ID=T.TEAM_ID;

select MT.TEAM_NAME, MT.PLAYER_NAME, MT.POSITION
from (
	select P.TEAM_ID, T.TEAM_NAME, P.PLAYER_NAME, P.POSITION
	from PLAYER P, TEAM T
	where P.TEAM_ID=T.TEAM_ID) MT
where MT.TEAM_ID='K01';

select MT.TEAM_NAME, MT.PLAYER_NAME, MT.POSITION
from (
	select P.TEAM_ID, T.TEAM_NAME, P.PLAYER_NAME, P.POSITION
	from PLAYER P, TEAM T
	where P.TEAM_ID=T.TEAM_ID) MT
where MT.TEAM_ID='K01'
-- and ROWNUM <= 10;
limit 10;
