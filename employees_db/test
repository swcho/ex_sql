CREATE TABLE `PLAYER`
(
    `PLAYER_ID` CHAR(7) PRIMARY KEY NOT NULL,
    `PLAYER_NAME` VARCHAR(20) NOT NULL,
    `TEAM_ID` CHAR(3) NOT NULL,
    `E_PLAYER_NAME` VARCHAR(40),
    `NICKNAME` VARCHAR(30),
    `JOIN_YYYY` CHAR(4),
    `POSITION` VARCHAR(10),
    `BACK_NO` INT,
    `NATION` VARCHAR(20),
    `BIRTH_DATE` DATE,
    `SOLAR` CHAR(1),
    `HEIGHT` INT,
    `WEIGHT` INT
);
CREATE TABLE `PLAYER_K00`
(
    `PLAYER_ID` CHAR(7) NOT NULL,
    `PLAYER_NAME` VARCHAR(20) NOT NULL,
    `TEAM_ID` CHAR(3) NOT NULL,
    `POSITION` VARCHAR(10),
    `BACK_NO` INT
);
CREATE TABLE `SCHEDULE`
(
    `STADIUM_ID` CHAR(3) NOT NULL,
    `SCHE_DATE` CHAR(8) NOT NULL,
    `GUBUN` CHAR(1) NOT NULL,
    `HOMETEAM_ID` CHAR(3) NOT NULL,
    `AWAYTEAM_ID` CHAR(3) NOT NULL,
    `HOME_SCORE` INT,
    `AWAY_SCORE` INT,
    PRIMARY KEY (`STADIUM_ID`, `SCHE_DATE`)
);
CREATE TABLE `STADIUM`
(
    `STADIUM_ID` CHAR(3) PRIMARY KEY NOT NULL,
    `STADIUM_NAME` VARCHAR(40),
    `HOMETEAM_ID` CHAR(3),
    `SEAT_COUNT` INT,
    `ADDRESS` VARCHAR(60),
    `DDD` VARCHAR(3),
    `TEL` VARCHAR(10)
);
CREATE TABLE `TEAM`
(
    `TEAM_ID` CHAR(3) PRIMARY KEY NOT NULL,
    `REGION_NAME` VARCHAR(8) NOT NULL,
    `TEAM_NAME` VARCHAR(40) NOT NULL,
    `E_TEAM_NAME` VARCHAR(50),
    `ORIG_YYYY` CHAR(4),
    `STADIUM_ID` CHAR(3) NOT NULL,
    `ZIP_CODE1` CHAR(3),
    `ZIP_CODE2` CHAR(3),
    `ADDRESS` VARCHAR(80),
    `DDD` VARCHAR(3),
    `TEL` VARCHAR(10),
    `FAX` VARCHAR(10),
    `HOMEPAGE` VARCHAR(50),
    `OWNER` VARCHAR(10)
);
ALTER TABLE `PLAYER` ADD FOREIGN KEY (`TEAM_ID`) REFERENCES `TEAM` (`TEAM_ID`);
CREATE INDEX `PLAYER_FK` ON `PLAYER` (`TEAM_ID`);
ALTER TABLE `SCHEDULE` ADD FOREIGN KEY (`STADIUM_ID`) REFERENCES `STADIUM` (`STADIUM_ID`);
ALTER TABLE `TEAM` ADD FOREIGN KEY (`STADIUM_ID`) REFERENCES `STADIUM` (`STADIUM_ID`);
CREATE INDEX `TEAM_FK` ON `TEAM` (`STADIUM_ID`);
